---
import type { CollectionEntry } from 'astro:content';
import { format } from 'date-fns';

interface Props {
  post: CollectionEntry<'blog'>;
}
const {
  post: { data: post, slug },
} = Astro.props;
---

<div class="flex flex-col mb-6">
  <h4 class="text-2xl font-semibold text-theme-primary hover:underline mb-2">
    <a href={`/blog/${slug}`} title={post.title}>{post.title}</a>
  </h4>
  <div class="text-gray-400 mb-5">
    {format(new Date(post.date), 'PPP')}
  </div>
  <p class="text-lg leading-6 line-clamp-2 hyphens-auto">
    {post.description}
  </p>
</div>
